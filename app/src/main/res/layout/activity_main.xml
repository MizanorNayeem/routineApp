<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/psb_r_bg"
    >
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:text="PSB Routine"
            android:textAlignment="center"
            android:textColor="@color/psbrtext"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Dream, We Dare, We Do."
            android:textColor="@color/psbrtextsub"
            android:fontFamily="@font/urbanist_regular"
            android:textAlignment="center"
            android:textSize="20dp"
            />



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        android:background="@drawable/round_main"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/secondSem"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="2nd Sem"
                        android:textAllCaps="false"
                        android:paddingBottom="30dp"
                        android:paddingTop="30dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="5dp"
                        />

                    <Button
                        android:id="@+id/fourthSem"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="4th Sem"
                        android:textAllCaps="false"
                        android:paddingBottom="30dp"
                        android:paddingTop="30dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:weightSum="3"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/sixthSem"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="6th Sem"
                        android:textAllCaps="false"
                        android:paddingBottom="30dp"
                        android:paddingTop="30dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentLeft="true"
                        />

                    <Button
                        android:id="@+id/aboutUs"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/bg_main_alternate"
                        android:fontFamily="@font/urbanist_bold"
                        android:letterSpacing=".14"
                        android:paddingLeft="30dp"
                        android:paddingTop="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="30dp"
                        android:text="About Us"
                        android:textAllCaps="false"
                        android:textColor="@color/psbrtext"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>