<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/psb_r_bg"
    >
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:text="PSB Routine"
            android:textAlignment="center"
            android:textColor="@color/psbrtext"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Dream, We Dare, We Do."
            android:textColor="@color/psbrtextsub"
            android:fontFamily="@font/urbanist_regular"
            android:textAlignment="center"
            android:textSize="20dp"
            />



    </LinearLayout>
    <RelativeLayout
        android:id="@+id/daySelectionSix"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:paddingBottom="50dp"
        android:background="@drawable/round_main"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <TextView
            android:id="@+id/weekHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today is ......."
            android:textColor="@color/psbrtext"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="@font/urbanist_bold"
            android:layout_marginBottom="40dp"
            android:letterSpacing=".15"
            android:background="@drawable/bg_main_alternate"
            android:padding="10dp"
            />

        <LinearLayout
            android:id="@+id/weekDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/weekHead"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/monday4th"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="5dp"
                        />

                    <Button
                        android:id="@+id/tuesday4th"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/wedday4th"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentStart="true"
                        />

                    <Button
                        android:id="@+id/thursday4th"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/friday4th"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_main_alternate"
                        android:fontFamily="@font/urbanist_bold"
                        android:letterSpacing=".14"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:text="Friday"
                        android:textAllCaps="false"
                        android:textColor="@color/psbrtext"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>