<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/psb_r_bg"
    >
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:text="PSB Routine"
            android:textAlignment="center"
            android:textColor="@color/psbrtext"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Dream, We Dare, We Do."
            android:textColor="@color/psbrtextsub"
            android:fontFamily="@font/urbanist_regular"
            android:textAlignment="center"
            android:textSize="20dp"
            />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_main"
        android:paddingTop="30dp"
        >

        <RelativeLayout
            android:id="@+id/daySelectionSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <LinearLayout
                android:id="@+id/aboutImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:background="@drawable/image_bg"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/nayeem"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/aboutImage"
                android:gravity="center"
                >



                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutUs"
                    android:textColor="@color/psbrtext"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/about_name"
                    />

                <TextView
                    android:id="@+id/aboutText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutText"
                    android:textColor="@color/psbrtext"
                    android:textSize="12sp"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_marginBottom="20dp"
                    android:padding="15dp"
                    android:background="@drawable/bg_main_alternate"
                    />

                <TextView
                    android:id="@+id/aboutText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutText2"
                    android:textColor="@color/psbrtext"
                    android:textSize="12sp"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_marginBottom="20dp"
                    android:padding="15dp"
                    android:background="@drawable/bg_main_alternate"
                    />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</LinearLayout>