<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/psb_r_bg"
    >
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:text="PSB Routine"
            android:textAlignment="center"
            android:textColor="@color/psbrtext"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Dream, We Dare, We Do."
            android:textColor="@color/psbrtextsub"
            android:fontFamily="@font/urbanist_regular"
            android:textAlignment="center"
            android:textSize="20dp"
            />



    </LinearLayout>

    <ScrollView
        android:id="@+id/mondaySixRoutine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        android:paddingBottom="0dp"
        android:background="@drawable/round_main"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            >

            <TextView
                android:id="@+id/monDayRoutine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule of Monday"
                android:textColor="@color/psbrtext"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/urbanist_bold"
                android:layout_marginBottom="40dp"
                android:letterSpacing=".15"
                android:background="@drawable/bg_main_alternate"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/monDayRoutine"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AGR-321 (9:30 - 11:30)"
                            android:textAllCaps="false"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bg_main_alternate"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="@color/psbrtext"
                            android:letterSpacing=".14"
                            android:layout_alignParentStart="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPB-322 (11:30 - 01:30)"
                            android:textAllCaps="false"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bg_main_alternate"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="@color/psbrtext"
                            android:letterSpacing=".14"
                            android:layout_alignParentStart="true"
                            />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <Button
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Recess (01:30 - 02:30)"
                            android:textAllCaps="false"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bg_main_alternate"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="@color/psbrtext"
                            android:letterSpacing=".14"
                            android:layout_alignParentStart="true"
                            />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="2"
                    >
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="AEG-321 (02:30)"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="12sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        />

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="AGR-322 (03:30)"
                        android:textAllCaps="false"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="@drawable/bg_main_alternate"
                        android:textSize="12sp"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColor="@color/psbrtext"
                        android:letterSpacing=".14"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Elective (04:30 - 05:30)"
                            android:textAllCaps="false"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bg_main_alternate"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanist_bold"
                            android:textColor="@color/psbrtext"
                            android:letterSpacing=".14"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>



